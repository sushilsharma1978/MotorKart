<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/back_colour"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".NoBookingStatus">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.92">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/orange"
                android:layout_height="?attr/actionBarSize">
                <ImageView
                    android:id="@+id/iv_book_bike3"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.06"
                    android:src="@drawable/back_arrow"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:text="Book a service"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@android:color/white"
                    android:layout_height="match_parent"
                    android:layout_weight="0.94"/>
            </LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="5dp"
            android:elevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="match_parent"
                        android:text="BOOK SERVICES FOR"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="15dp"
                        android:textColor="#5a5a5a"
                        android:layout_height="wrap_content"
                        />
                    <Spinner
                        android:id="@+id/spinner_category3"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="15dp"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="16dp"
                        android:textColor="@android:color/black"
                        android:background="@drawable/edittext_back"
                        android:layout_height="45dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="match_parent"
                        android:text="SELECT STORE"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="15dp"
                        android:textColor="#5a5a5a"
                        android:layout_height="wrap_content"
                        />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="15dp"
                        android:id="@+id/spinner_store3"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="16dp"
                        android:textColor="@android:color/black"
                        android:background="@drawable/edittext_back"
                        android:layout_height="45dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="match_parent"
                        android:text="DATE"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="15dp"
                        android:textColor="#5a5a5a"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="15dp"
                        android:id="@+id/tv_date3"
                        android:paddingTop="15dp"
                        android:hint="DD/MM/YYYY"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="16dp"
                        android:textColor="@android:color/black"
                        android:background="@drawable/edittext_back"
                        android:layout_height="45dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="match_parent"
                        android:text="TIME"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="15dp"
                        android:textColor="#5a5a5a"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="15dp"
                        android:id="@+id/tv_time3"
                        android:hint="00:00:00"
                        android:paddingTop="15dp"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="16dp"
                        android:textColor="@android:color/black"
                        android:background="@drawable/edittext_back"
                        android:layout_height="45dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:text="SELECT SERVICE TYPE"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#5a5a5a"
                        android:layout_height="wrap_content"
                        />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="15dp"
                        android:id="@+id/spinner_servicetype3"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="16dp"
                        android:textColor="@android:color/black"
                        android:background="@drawable/edittext_back"
                        android:layout_height="45dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="match_parent"
                        android:text="ENTER YOUR DETAILS"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="15dp"
                        android:textColor="#5a5a5a"
                        android:layout_height="wrap_content"
                        />


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:hint="Type your remark here"
                            android:paddingLeft="15dp"
                            android:id="@+id/ed_remarks3"
                            android:background="@drawable/edittext_back"

                            android:inputType="textMultiLine"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="16dp"
                            android:textColor="@android:color/black"
                            android:layout_height="45dp"/>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"

            android:orientation="vertical"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_height="50dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="BOOK A SERVICE"
                android:id="@+id/btn_bookservice3"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@color/orange"/>

           <!-- <ProgressBar
                android:id="@+id/pb_book3"
                android:layout_width="30dp"
                android:visibility="gone"
                android:layout_height="30dp"
                android:layout_gravity="center"/>-->

        </LinearLayout>
    </LinearLayout>
</ScrollView>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08">
            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/container"

                android:background="@color/back_colour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:id="@+id/frame_container"
                    android:layout_height="match_parent">

                </FrameLayout>

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/btnav_view33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
                    app:itemTextAppearanceInactive="@style/BottomNavigationView"
                    app:itemIconTint="@drawable/bottom_nav_icon_color_selector"
                    app:itemTextColor="@drawable/bottom_nav_icon_color_selector"
                    app:labelVisibilityMode="labeled"
                    android:background="@color/orange"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:menu="@menu/bottom_nav_menu" />



            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>