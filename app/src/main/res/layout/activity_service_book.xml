<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_colour"
    android:orientation="vertical"
    tools:context=".ServiceBook">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/orange"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/iv_servicebook"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.06"
            android:src="@drawable/back_arrow"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:text="Service Book"
            android:textSize="20dp"
            android:gravity="center"
            android:fontFamily="@font/lato_regular"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="0.94"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@color/orange"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:text="Bike"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:background="@color/darkorange"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:text="Car"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="35dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:text="JOB CARD NO    :"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="17dp"
                    android:textColor="#5a5a5a"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"/>

                <TextView
                    android:layout_width="0dp"
                    android:text="CL51243"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="17dp"
                    android:textColor="#8B8A8A"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:text="Date :"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="17dp"
                    android:textColor="#5a5a5a"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.55"/>

                <TextView
                    android:layout_width="0dp"
                    android:text="DD/MM/YYYY"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="17dp"
                    android:textColor="#8B8A8A"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:text="Amount Paid :"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="17dp"
                    android:textColor="#5a5a5a"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"/>

                <TextView
                    android:layout_width="0dp"
                    android:text="Rs.2354"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="17dp"
                    android:textColor="#8B8A8A"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.07dp"
                android:layout_marginTop="40dp"
                android:background="#A7A4A3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:weightSum="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:text="Ratings"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="17dp"
                    android:textColor="#5a5a5a"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="17dp"
                    android:textColor="#8B8A8A"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6">
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>