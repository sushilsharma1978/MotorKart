<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:text="Store Name :"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="15dp"
                    android:textColor="#464343"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>

                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/tv_st_name"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="14dp"
                    android:textColor="#4B4747"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="6dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:text="Store No. :"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="15dp"
                    android:textColor="#464343"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"/>

                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/tv_st_number"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="14dp"
                    android:textColor="#4B4747"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:text="Installation Charges :"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="15dp"
                    android:textColor="#464343"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"/>

                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/tv_st_inst"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="14dp"
                    android:textColor="#4B4747"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:text="MotorKart Discount :"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="15dp"
                    android:textColor="#464343"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"/>

                <TextView
                    android:layout_width="0dp"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="14dp"
                    android:id="@+id/tv_st_dsct"
                    android:textColor="#4B4747"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.07dp"
                android:layout_marginTop="20dp"
                android:background="#A7A4A3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="6dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:text="Ratings"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="12dp"
                        android:textColor="#5a5a5a"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="20dp"
                        android:layout_weight="0.7">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_solid"
                            android:id="@+id/iv_star_one"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_solid"
                            android:id="@+id/iv_star_two"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_solid"
                            android:id="@+id/iv_star_three"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_solid"
                            android:id="@+id/iv_star_four"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_solid"
                            android:id="@+id/iv_star_five"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"

                    android:weightSum="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:text="Add to Wishlist"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="12dp"
                        android:textColor="#5a5a5a"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_height="20dp"
                        android:layout_weight="0.4">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_gravity="center"
                            android:layout_height="match_parent"
                            android:src="@drawable/emptyheart"
                            android:id="@+id/iv_wish"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:background="#5a5a5a"
                android:layout_height="45dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.495">

                    <TextView
                        android:id="@+id/tv_vw_enquiry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/white"
                        android:textSize="14dp"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center"
                        android:text="INQUIRY"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@android:color/white"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.495">

                    <TextView
                        android:id="@+id/tv_vw_store"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/white"
                        android:textSize="14dp"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center"
                        android:text="VIEW STORE"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>