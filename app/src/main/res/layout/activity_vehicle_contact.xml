<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_colour"
    tools:context=".VehicleContact">



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/orange"
                android:layout_height="?attr/actionBarSize">
                <ImageView
                    android:id="@+id/iv_contact_backk"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.06"
                    android:src="@drawable/back_arrow"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:text="Contact Us"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@android:color/white"
                    android:layout_height="match_parent"
                    android:layout_weight="0.94"/>
            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.92">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="5dp"
                android:elevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="35dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="match_parent"
                            android:text="SUBJECT"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="15dp"
                            android:textColor="#5a5a5a"
                            android:layout_height="wrap_content"
                            />
                        <EditText
                            android:id="@+id/ed_sub_ct"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="15dp"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="16dp"
                            android:hint="Type here"
                            android:textColor="@android:color/black"
                            android:background="@drawable/edittext_back"
                            android:layout_height="50dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="match_parent"
                            android:text="VEHICLE"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="15dp"
                            android:textColor="#5a5a5a"
                            android:layout_height="wrap_content"
                            />
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="15dp"
                            android:id="@+id/spinner_ct_veh"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="16dp"
                            android:textColor="@android:color/black"
                            android:background="@drawable/edittext_back"
                            android:layout_height="50dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="match_parent"
                            android:text="MESSAGE"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="15dp"
                            android:textColor="#5a5a5a"
                            android:layout_height="wrap_content"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/edittext_back"
                            android:layout_height="90dp">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:hint="Type your query here"
                                android:paddingLeft="15dp"
                                android:id="@+id/ed_query_ct"
                                android:background="@null"
                                android:inputType="textMultiLine"
                                android:fontFamily="@font/lato_regular"
                                android:textSize="16dp"
                                android:textColor="@android:color/black"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_height="50dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="SUBMIT"
                    android:id="@+id/btn_contactus"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:background="@color/orange"/>

                <ProgressBar
                    android:id="@+id/pb_contactus"
                    android:layout_width="30dp"
                    android:visibility="gone"
                    android:layout_height="30dp"
                    android:layout_gravity="center"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08">
            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/container"

                android:background="@color/back_colour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:id="@+id/frame_container"
                    android:layout_height="match_parent">

                </FrameLayout>

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/btnav_view04"
                    android:layout_width="0dp"
                    app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
                    app:itemTextAppearanceInactive="@style/BottomNavigationView"
                    app:itemIconTint="@drawable/bottom_nav_icon_color_selector"
                    app:itemTextColor="@drawable/bottom_nav_icon_color_selector"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    app:labelVisibilityMode="labeled"
                    android:background="@color/orange"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:menu="@menu/bottom_nav_menu" />



            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>