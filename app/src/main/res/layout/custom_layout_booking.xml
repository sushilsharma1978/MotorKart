<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:background="@android:color/white"
        android:layout_height="match_parent">

        <!-- <Space
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="0.02"/>
         <ImageView
             android:layout_width="0dp"
             android:layout_gravity="center"
             android:layout_weight="0.25"
             android:id="@+id/iv_vehicles"
             android:scaleType="fitXY"
             android:src="@drawable/bikee"
             android:layout_height="100dp">

         </ImageView>

         <Space
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="0.01"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_bkname"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="HERO HONDA"
                        android:textSize="17dp"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/darkorange"/>

                    <TextView
                        android:id="@+id/id_tv_bkstatus"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="Pending Status"
                        android:textSize="12dp"
                        android:gravity="right"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="#79736D"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registartion No.: "
                        android:textSize="14dp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="#5a5a5a"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="78789799"
                        android:textSize="15dp"
                        android:id="@+id/tv_bkregno"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="#5a5a5a"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: "
                        android:textSize="14dp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="#5a5a5a"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="78789799"
                        android:textSize="15dp"
                        android:id="@+id/tv_bkdate"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="#5a5a5a"/>


                </LinearLayout>

            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_weight="0.15"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/ivbk_delete"
                    android:src="@drawable/remove_vehicle"
                    android:layout_height="30dp"/>
            </LinearLayout>-->

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:id="@+id/ivbk_delete"
                android:layout_marginRight="40dp"
                android:background="@drawable/button_black"
                android:fontFamily="@font/lato_bold"
                android:text="C A N C E L  B O O K I N G"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="17dp"
                android:textStyle="bold" />

        </LinearLayout>







    </androidx.cardview.widget.CardView>


</LinearLayout>